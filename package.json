{
  "private": true,
  "name": "sbideo-preact",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && npm run servevideos",
    "servevideos": "if-env NODE_ENV=production && node ./server.js ./data || nodemon ./server.js ./data",
    "dev": "npm run servevideos & preact watch &",
    "test": "jest ./tests",
    "format": "prettier './src/**/*.{js,json,css,md}' --single-quote --write"
  },
  "devDependencies": {
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "nodemon": "^1.14.12",
    "preact-cli": "^2.1.0",
    "preact-render-spy": "^1.2.1",
    "prettier": "^1.10.2"
  },
  "dependencies": {
    "chokidar": "^1.7.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "fuse.js": "^3.2.0",
    "jsonfile": "^4.0.0",
    "minimist": "^1.2.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7",
    "shortid": "^2.2.8"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
